<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <!-- Solución rápida: asegurar que Microsoft.NET.ILLink.Tasks y paquetes Microsoft se resuelvan desde nuget.org -->
  <packageSources>
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
  </packageSources>

  <!-- PackageSourceMapping: añadir patrones para permitir que los paquetes del SDK y Microsoft se obtengan de nuget.org -->
  <packageSourceMapping>
    <packageSource key="nuget.org">
      <package pattern="Microsoft.NET.ILLink*" />
      <package pattern="Microsoft.AspNetCore.*" />
      <package pattern="Microsoft.EntityFrameworkCore.*" />
      <package pattern="Microsoft.*" />
      <package pattern="AutoMapper" />
      <package pattern="Azure.Storage.Blobs" />
      <package pattern="Blazored.*" />
      <package pattern="Markdig" />
      <!-- Patrón comodín para fallback: si tu organización requiere restricciones más estrictas, remueve este patrón y lista paquetes explicitamente -->
      <package pattern="*" />
    </packageSource>
  </packageSourceMapping>
</configuration>
